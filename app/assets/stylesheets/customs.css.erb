body{
    background-color: #f2f4f3 !important;
}


@media (min-width: 768px){
    .section {
        color: #ffffff;
        min-height: 470px;
        left: 0;
        right: 0;
        width: 100% !important;
        padding-top: 150px;
        top: 50px;
        background-image: url('<%= asset_path("bg.jpg")%>');
        background-size: cover;
        background-attachment: fixed;
        background-position: center;
    }
}

.fh-sub-banner{
    background-color: #14173D
    color: white;
}

.fh-card > .panel-default{
    border-radius: 0;
    overflow: hidden;
    -webkit-box-shadow: 0px 1px 1px #636363;
    -moz-box-shadow:0px 1px 1px #636363;
    box-shadow: 0px 1px 1px #636363;
}

.fh-card-heading{
    background-color: transparent;
    border-color: transparent;
}

.fh-nav-menu{
    float: right !important;
}

.fh-nav{
    background-color: #14173D !important;
}

.btn{
    background-color: #359257;
    padding: 10px 30px !important;
    border-radius: 1px !important;
    color: #f2f4f3;
}

.fh-footer{
    background-color: #14173D !important;
    bottom: 0;
    min-height: 200px;
    padding: 20px 58px;

}

.fh-signup{
    background-color: white;
    padding-left: 40px;
    padding-right: 40px;
}

.panel-default{
    border-color: transparent !important;
}

.navbar-inverse .navbar-nav > li > a {
    color: white !important;
}

.fh-card-subtitle{
    font-style: italic;
    font-weight: bold;
}

.card-textarea{
    min-width: 100%;
    min-height: 100px;
}

.fh-footer-items {
    color: white;
    position: absolute;
    font-size: 130%;
}

.fh-circle {
    display: inline-block !important;
    margin: 10px 10px;
    width: 40px;
    height: 40px;
    background-color: white;
    border-radius: 50%;
}

.fh-address {
    font-size: 80%;
}

.fh-circle-list {
    padding-top: 15px;
}
